<div class="row">
  <%= form_with url: chatgpt_path, method: :get do |form| %>
    <div class="form-group">
      <%= form.label :query %>
      <%= form.text_area :query %>
      <%= form.submit 'get content' %>
    </div>
  <% end %>
</div>

<% if @response %>
  <div class="row">
    <h2>Response:</h2>
    <p><%= @response %></p>
  </div>
<% end %>